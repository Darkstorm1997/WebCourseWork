<!DOCTYPE html>
<meta charset="utf-8">

@{
    ViewData["Title"] = "Statistics";
}

<head>
    <link rel="stylesheet" href="~/css/statistics.css">
</head>

<h2 class="text-center">Statistics</h2>

<div class="card flex-md-row mb-4 shadow-sm h-md-250 bg-dark shadow">
    <div class="card-body d-flex flex-column align-items-start" style="background-color: #f2eeee;">
        <h5>Comments Graph</h5>
        <div id="statistics-graph"></div>
    </div>
</div>

<div class="card flex-md-row mb-4 shadow-sm h-md-250 bg-dark shadow">
    <div class="card-body d-flex flex-column align-items-start" style="background-color: #f2eeee;">
        <h5>Categories Chart</h5>
        <div id="pie-chart"></div>
    </div>
</div>

<div class="card flex-md-row mb-4 shadow-sm h-md-250 bg-dark shadow">
    <div class="card-body d-flex flex-column align-items-start" style="background-color: #f2eeee;">
        <h5>Item Locations</h5>
        <div id="my-map" style="margin: auto; text-align: center; position: relative; width: 600px; height: 600px;"></div>
    </div>
</div>


@section Scripts
    {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="http://d3js.org/d3.v3.min.js"></script>

    <script src="js/statistics.js"></script>

    <script src="js/statistics-map.js"></script>
    <script type="text/javascript" src="https://www.bing.com/api/maps/mapcontrol?callback=LoadMap" async defer></script>
}