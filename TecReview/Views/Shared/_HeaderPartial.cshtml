@using Microsoft.AspNetCore.Identity
@using TecReview.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<header class="blog-header border shadow-sm">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <!--<img src="~/images/TecReviewLogoBlack_300x65.png.png" class="animate-logo" /> -->
                Home
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item active">
                            <a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a>
                        </li>

                        <li class="nav-item active">
                            <a asp-controller="Items" asp-action="Index" class="nav-link">Items</a>
                        </li>

                        <li class="nav-item active">
                            <a asp-controller="Statistics" asp-action="Index" class="nav-link">Statistics</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item ml-3">
                        <a class="text-muted" href="@Url.Action("Index", "Search")" style="vertical-align: super;">
                            <svg xmlns="http://www.w3.org/2000/svg" style="vertical-align: sub;" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-3">
                                <circle cx="10.5" cy="10.5" r="7.5"></circle>
                                <line x1="21" y1="21" x2="15.8" y2="15.8"></line>
                            </svg>
                        </a>
                    </li>

                    <li class="nav-item">
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <a href="https://twitter.com/TecReview?ref_src=twsrc%5Etfw" class="twitter-follow-button" data-size="large" data-show-screen-name="false" data-dnt="true" data-show-count="false">Follow Us</a>
                            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                        }
                    </li>

                    <li class="nav-item">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="form-inline my-2 my-lg-0">
                                <button type="submit" class="btn btn-secondary">Log out</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</header>

