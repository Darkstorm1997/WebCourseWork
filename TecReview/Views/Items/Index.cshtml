@model IEnumerable<TecReview.Models.Item>

@{
    ViewData["Title"] = "Items";
}

<br />
<h2 class="text-center">Existing items</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Item
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Header)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> 
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ItemId">Details</a> 
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
