@model IEnumerable<TecReview.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<br />
<h2 class="text-center">Existing Categories</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> 
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> 
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
